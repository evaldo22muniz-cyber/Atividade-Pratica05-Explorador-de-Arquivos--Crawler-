import os

def listar_arquivos(diretorio):
    try:
        # Lista tudo dentro do diret처rio
        itens = os.listdir(diretorio)
    except PermissionError:
        print(f"Sem permiss찾o para acessar: {diretorio}")
        return

    for item in itens:
        caminho_completo = os.path.join(diretorio, item)

        # Se for arquivo, imprime
        if os.path.isfile(caminho_completo):
            print(f"Arquivo: {caminho_completo}")

        # Se for diret처rio, imprime e chama recursivamente
        elif os.path.isdir(caminho_completo):
            print(f"\nDiret처rio: {caminho_completo}")
            listar_arquivos(caminho_completo)  # Chamada recursiva


# Exemplo de uso:
# listar_arquivos("C:/Users/SeuUsuario/Documents")
